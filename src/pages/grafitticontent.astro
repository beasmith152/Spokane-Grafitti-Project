---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import 'swiper/swiper-bundle.css';

---
<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<meta name="apple-mobile-web-app-title" content="Spo Grafitti" />
<link rel="manifest" href="/site.webmanifest" />

<Layout title="Gallery">
	<body>

		<nav class="navbar">
			<ul>
			  <li><a href="/"><img class="icon" src="https://www.freeiconspng.com/thumbs/spray-can-png/spray-can-png-26.png"/></a></li>
			  <li><a href="/graffiti/">About</a></li>
			  <li><a href="/grafitticontent/">Gallery</a></li>
			</ul>
		  </nav>

		<div class="overlay">
	<main>
		<div class="slider">
			<div class="swiper-container">
				<div class="swiper-wrapper">
				  <div class="swiper-slide"><img src ="/images/IMG_3999.JPG"/></div>
				  <div class="swiper-slide"><img src ="/images/IMG_4001.JPG"/></div>
				  <div class="swiper-slide"><img src ="/images/IMG_4002.JPG"/></div>
				</div>
				<!-- Add Pagination -->
				<div class="swiper-pagination"></div>
				<!-- Add Navigation -->
				<div class="swiper-button-next"></div>
				<div class="swiper-button-prev"></div>
			  </div>
			
		</div>

		
		
	</main>
	</div>
	</body>
</Layout>

  
<!-- style sheet -->

<style>
	html{
		height:100vh;
		width:100%;
		margin:0;
		padding:0;
	}
	body{
		height:100vh;
		width:100%;
		background-image: url('https://irp-cdn.multiscreensite.com/6ff94093/dms3rep/multi/tumblr_inline_ntyks0xBdN1tbk6o9_1280-1280x851.png');
		background-size: cover;
		background-position: center;
		margin: 0;
	}
	.overlay{
		background: rgba(0,0,0,0.5);
		height:100vh;
		width:100%;
	}

	.navbar {
    width: 100%;
    background: rgba(0, 0, 0, 0.8);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
  }
  .navbar ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: space-evenly;
  }
  .navbar ul li {
    padding: 1rem;
	padding-top:1em;
  }
  .navbar ul li a {
    color: white;
    text-decoration: none;
    font-size: 1rem;
  }
  .icon{
	width:1em;
	position:fixed;
	margin-top:-.5em;
  }
  .navbar ul li a:hover{
	  color: #23d205;
  }

	main {
		margin: auto;
		padding-top:20vh;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.swiper-container {
    width: 100%;
    height: 100%;
  }
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-button-next,
  .swiper-button-prev {
    color: white;
    z-index: 10;
  }

	@media(max-width:780px;){
		html{
		height:100vh;
		width:auto;
		margin:0;
		padding:0;
	}
	body{
		min-height:100vh;
		width:auto;
		background-image: url('https://irp-cdn.multiscreensite.com/6ff94093/dms3rep/multi/tumblr_inline_ntyks0xBdN1tbk6o9_1280-1280x851.png');
		background-size: cover;
		background-position: center;
		margin: 0;
	}
	.overlay{
		background: rgba(0,0,0,0.5);
		height:100vh;
		width:auto;
	}

  .swiper-container {
    width: auto;
    height: 100%;
  }
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .swiper-button-next,
  .swiper-button-prev {
    color: white;
    z-index: 10;

	}

</style>

<script>
	document.addEventListener('DOMContentLoaded', function () {
	  import('swiper/bundle').then(({ default: Swiper }) => {
		new Swiper('.swiper-container', {
		  slidesPerView: 1,
		  spaceBetween: 1000,
		  navigation: {
			nextEl: '.swiper-button-next',
			prevEl: '.swiper-button-prev',
		  },
		  pagination: {
			el: '.swiper-pagination',
			clickable: true,
		  },
		  loop: true, // Enable looping
		});
	  });
	});
  </script>